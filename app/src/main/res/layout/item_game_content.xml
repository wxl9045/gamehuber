<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_game_tltle"
        style="@style/main_text_b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="绝地求生"
        android:textColor="@color/black"
        />
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:id="@+id/img_game"
        app:layout_constraintTop_toBottomOf="@+id/tv_game_tltle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h, 1:0.5"
        android:src="@mipmap/b2"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/card_icon"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_game"
        >
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/b2"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_game_content_title"
        android:layout_marginRight="5dp"
        style="@style/main_text_b"
        android:text="绝地求生"
        app:layout_constraintRight_toLeftOf="@+id/card_icon"
        app:layout_constraintTop_toBottomOf="@+id/img_game"
        />
    <TextView
        android:id="@+id/tv_game_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        style="@style/main_text"
        android:textColor="@color/gray"
        android:text="绝地求生绝地求生绝地求生绝地求生绝地求生绝地求生"
        android:maxEms="10"
        app:layout_constraintRight_toRightOf="@+id/tv_game_content_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_game_content_title"
        android:gravity="right"
        />
    <ImageView
        android:id="@+id/img_collect"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_game"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/icon_heart"
        />
    <TextView
        app:layout_constraintLeft_toRightOf="@+id/img_collect"
        style="@style/main_text"
        app:layout_constraintBottom_toBottomOf="@+id/img_collect"
        android:text="8.7"
        android:layout_marginLeft="5dp"
        android:textColor="@color/gray"
        />
    <TextView
        style="@style/main_text"
        android:textColor="@color/gray"
        android:textSize="@dimen/txt_size_min"
        android:text="111"
        app:layout_constraintTop_toBottomOf="@+id/img_collect"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
