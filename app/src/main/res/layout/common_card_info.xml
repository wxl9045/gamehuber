<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@mipmap/ic_launcher_round"
            />
        <TextView
            android:id="@+id/user_name"
            style="@style/main_text"
            android:text="gameHuber"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar"
            app:layout_constraintRight_toLeftOf="@+id/iv_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_describe"
            style="@style/main_text"
            android:textColor="@color/gray"
            app:layout_constraintRight_toRightOf="@+id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
            android:maxEms="15"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="2313131231231231231231313123213131232131312312"
            />

        <ImageView
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_describe"
            app:layout_constraintBottom_toTopOf="@+id/iv_heart"
            android:id="@+id/iv_cover_feed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h, 2:1"
            android:src="@mipmap/b1" />
        <ImageView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_describe"
            app:layout_constraintBottom_toTopOf="@+id/iv_heart"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/iv_single_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/b1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/re_image"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_describe"
            app:layout_constraintBottom_toTopOf="@+id/iv_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_heart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/iv_praise"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_heart"
            app:layout_constraintTop_toTopOf="@+id/iv_heart"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:textSize="@dimen/txt_size_min"
            android:id="@+id/tv_praise"
            style="@style/main_text"
            android:textColor="@color/gray"
            android:text="123"
            app:layout_constraintRight_toLeftOf="@+id/iv_praise"
            app:layout_constraintTop_toTopOf="@+id/iv_praise"
            app:layout_constraintBottom_toBottomOf="@+id/iv_praise"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_heart"
            app:layout_constraintTop_toTopOf="@+id/iv_heart"
            app:layout_constraintRight_toLeftOf="@id/tv_praise"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:textSize="@dimen/txt_size_min"
            android:id="@+id/tv_comment"
            style="@style/main_text"
            android:textColor="@color/gray"
            android:text="55"
            app:layout_constraintRight_toLeftOf="@+id/iv_comment"
            app:layout_constraintTop_toTopOf="@+id/iv_comment"
            app:layout_constraintBottom_toBottomOf="@+id/iv_comment"
            android:layout_marginRight="5dp"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
