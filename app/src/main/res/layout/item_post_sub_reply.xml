<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/item_imAvatar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_mine"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/item_name"
            style="@style/main_text"
            android:text="game"
            android:textColor="@color/text_gray"
            app:layout_constraintRight_toLeftOf="@+id/item_imAvatar"
            app:layout_constraintTop_toTopOf="@+id/item_imAvatar"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_content"
            style="@style/main_text"
            android:text="aaa"
            android:textColor="@color/black"
            app:layout_constraintRight_toLeftOf="@+id/item_imAvatar"
            app:layout_constraintTop_toBottomOf="@+id/item_name"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/item_image"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/item_content"
            app:layout_constraintBottom_toTopOf="@+id/item_time"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/b1"
            />
        <TextView
            android:id="@+id/item_time"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/item_imAvatar"
            android:text="2010-01-01"
            style="@style/main_text"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/txt_size_min"
            />
        <ImageView
            android:id="@+id/item_im_like"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_heart"
            />
        <TextView
            android:id="@+id/item_tv_like"
            style="@style/main_text"
            android:textSize="@dimen/txt_size_min"
            android:textColor="@color/text_gray"
            app:layout_constraintLeft_toLeftOf="@+id/item_im_like"
            app:layout_constraintRight_toRightOf="@+id/item_im_like"
            app:layout_constraintTop_toBottomOf="@+id/item_im_like"
            android:text="0"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
